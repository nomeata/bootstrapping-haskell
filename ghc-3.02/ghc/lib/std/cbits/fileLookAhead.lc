\subsection[fileLookAhead.lc]{hLookAhead Runtime Support}

\begin{code}

#include "rtsdefs.h"
#include "stgio.h"

StgInt
fileLookAhead(fp)
StgForeignObj fp;
{
    int c;

    if ((c = fileGetc(fp)) == EOF) {
	return c;
    } else if (ungetc(c, (FILE *) fp) == EOF) {
	cvtErrno();
	stdErrno();
	return EOF;
    } else
	return c;
}

\end{code}
